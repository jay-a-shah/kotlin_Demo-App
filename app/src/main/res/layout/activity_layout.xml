<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".differentLayout.LayoutActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDifferentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/tv_different_types_of_layout"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/purple_500"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarLayoutInclude"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/button_border"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/relative_layout_btn"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/different_layout_btn"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/textViewDifferentLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/button_border"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/linear_layout_btn"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/different_layout_btn"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/btnRelativeLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/button_border"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/constraint_layout_btn"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/different_layout_btn"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/btnLinearLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/button_border"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/grid_layout_btn"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/different_layout_btn"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/btnConstraintLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/button_border"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/frame_layout_btn"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/different_layout_btn"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/btnGridLayout" />

    <include
        android:id="@+id/toolbarLayoutInclude"
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>