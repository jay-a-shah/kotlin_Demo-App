<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".differentLayout.ConstraintLayoutActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Constraint_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/Relative_layout_heading"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/light_grey"
        app:layout_constraintBottom_toTopOf="@+id/editTextNameConstraintLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextNameConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/layout_elements_background"
        android:hint="@string/name_hint"
        android:padding="15dp"
        android:textColorHint="@color/text_color_hint"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmailConstraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Constraint_heading"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextEmailConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/layout_elements_background"
        android:hint="@string/e_mail_hint"
        android:padding="15dp"
        android:textColorHint="@color/text_color_hint"
        app:layout_constraintBottom_toTopOf="@+id/spinner_constraint_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNameConstraintLayout" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/option"
        android:padding="15dp"
        android:paddingRight="25dp"
        android:textColorHint="@color/text_color_hint"
        app:layout_constraintBottom_toTopOf="@+id/multiLineEditTextConstraintlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailConstraintLayout" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/multiLineEditTextConstraintlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/layout_elements_background"
        android:hint="@string/multiline_hint"
        android:lines="5"
        android:padding="15dp"
        android:textColorHint="@color/text_color_hint"
        app:layout_constraintBottom_toTopOf="@+id/checkboxConstraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_constraint_layout" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkboxConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:buttonTint="@color/light_grey"
        android:padding="20dp"
        android:text="@string/checkboxLayoutText"
        android:textColor="@color/light_grey"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chainexamplebtn"
        app:layout_constraintTop_toBottomOf="@+id/multiLineEditTextConstraintlayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chainexamplebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/light_grey"
        android:text="@string/send_feedback_btn"
        android:textColor="@color/text_color_hint"
        app:layout_constraintBaseline_toBaselineOf="@id/chainexamplebtn2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chainexamplebtn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkboxConstraintLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chainexamplebtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:text="@string/send_feedback_btn"
        android:textColor="@color/text_color_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chainexamplebtn3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chainexamplebtn"
        app:layout_constraintTop_toBottomOf="@+id/checkboxConstraintLayout"
        tools:layout_editor_absoluteY="631dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chainexamplebtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/light_grey"
        android:text="@string/send_feedback_btn"
        android:textColor="@color/text_color_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chainexamplebtn2"
        app:layout_constraintTop_toBottomOf="@+id/checkboxConstraintLayout"
        tools:layout_editor_absoluteY="631dp" />

</androidx.constraintlayout.widget.ConstraintLayout>